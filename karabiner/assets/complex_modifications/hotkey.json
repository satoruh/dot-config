{
  "title": "Hotkeys to switch application",
  "rules": [
    {
      "description": "Ctrl + ` to open alacritty",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a '/Applications/Alacritty.app'"
            }
          ]
        }
      ]
    }
  ]
}
